---
  const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-black text-white">
      <div class="text-center bg-indigo-800 border-white border-2">
        <p class="block lg:text-7xl md:text-4xl sm-text-3xl break-words text-center">Ausick</p>
        <p class="block lg:text-4xl md:text-xl sm:text-lg break-words text-center">
          Celebrating the "sick" stuff from down under
        </p>
        <div class="block lg:text-3xl md:text-lg sm:text-md break-words text-center">
          <a href="/">Home</a>
        </div>
      </div>
      <slot />
    </div>
  </body>
</html>
